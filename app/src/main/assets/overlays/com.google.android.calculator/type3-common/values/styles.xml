<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DisplayTextStyle" parent="@*android:style/Widget.Material.TextView">
        <item name="android:gravity">end|bottom|center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:fontFamily">@*com.google.android.calculator:font/google_sans_display</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
    <style name="PadButtonStyle" parent="@*android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:background">@*com.google.android.calculator:drawable/pad_button_background</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:onClick">onButtonClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@*com.google.android.calculator:font/google_sans_display</item>
        <item name="android:layout_rowWeight">1.0</item>
        <item name="android:layout_columnWeight">1.0</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.DeviceDefault.Light" />
    <style name="Theme" parent="@*com.google.android.calculator:style/Theme.AppCompat.Light">
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.calculator:colorPrimary">@*android:color/accent_material_dark</item>
        <item name="*com.google.android.calculator:colorAccent">@*android:color/accent_material_dark</item>
    </style>
    <style name="ThemeOverlay.Popup" parent="@*android:style/ThemeOverlay.Material">
        <item name="android:textDirection">locale</item>
        <item name="*com.google.android.calculator:fontFamily">sans-serif</item>
    </style>
</resources>
