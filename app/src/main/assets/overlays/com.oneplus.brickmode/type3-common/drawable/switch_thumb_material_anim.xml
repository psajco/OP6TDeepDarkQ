<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@*android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@*android:integer/config_mediumAnimTime">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval" android:useLevel="false"
            android:visible="true">
            <solid android:color="?*android:colorBackground" />
            <size android:width="21.0dip" android:height="21.0dip" />
            <stroke android:width="1dip" android:color="?*android:colorAccent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval" android:useLevel="false"
            android:visible="true">
            <size android:width="21.0dip" android:height="21.0dip" />
            <solid android:color="?*android:colorBackground" />
            <stroke android:width="1dip" android:color="?*android:colorControlNormal" />
        </shape>
    </item>
</selector>