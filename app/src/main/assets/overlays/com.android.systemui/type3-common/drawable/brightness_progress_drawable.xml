<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@*android:id/background">
        <shape android:tint="@*android:color/transparent" android:shape="rectangle">
            <size android:height="@*com.android.systemui:dimen/seek_bar_height" />
            <solid android:color="@*android:color/transparent" />
            <corners android:radius="@*com.android.systemui:dimen/seek_bar_corner_radius" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@*android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="@*android:color/user_icon_default_white" android:shape="rectangle">
                <size android:height="@*com.android.systemui:dimen/seek_bar_height" />
                <solid android:color="@*android:color/white" />
                <corners android:radius="@*com.android.systemui:dimen/seek_bar_corner_radius" />
            </shape>
        </scale>
    </item>
</layer-list>