<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@*com.ext.ui:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:theme">@*com.ext.ui:style/ThemeOverlay.AppCompat</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>		
        <item name="android:itemBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:editTextColor">@*android:color/white</item>
        <item name="*com.ext.ui:colorControlNormal">@*android:color/white</item>
        <item name="*com.ext.ui:windowActionModeOverlay">true</item>
    </style>
<style name="AppTheme.Black" parent="@*com.ext.ui:style/AppTheme">
        <item name="android:editTextColor">@*android:color/white</item>
    </style>	
    <style name="AppTheme.Toolbar.Title" parent="@*com.ext.ui:style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22.0dip</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
    </style>
    <style name="SettingsTheme" parent="@*com.ext.ui:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:theme">@*com.ext.ui:style/ThemeOverlay.AppCompat</item>
        <item name="android:background">@*android:color/background_floating_material_dark</item>	
        <item name="android:editTextColor">@*android:color/white</item>
        <item name="*com.ext.ui:colorControlNormal">@*android:color/white</item>
        <item name="*com.ext.ui:windowActionModeOverlay">true</item>
    </style>
</resources>	