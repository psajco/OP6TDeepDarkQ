<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_vertical" android:id="@*android:id/background">
        <shape>
            <size android:height="4.0dip" />
            <solid android:color="#2d000000" />
        </shape>
    </item>
    <item android:gravity="center_vertical" android:id="@*android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <size android:height="4.0dip" />
                <solid android:color="@*android:color/accent_material_dark" />
            </shape>
        </scale>
    </item>
</layer-list>